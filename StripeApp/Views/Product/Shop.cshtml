@model List<Product>
@{
    // Layout = "User_Layout";
    ViewData["Title"] = "Shop Product";
}

<div class="container mt-4 mb-4 ">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="mb-0">All Products</h2>
        <a href="@Url.Action("Cart", "Product")" class="btn btn-success">Go to Cart</a>
    </div>
</div>
<div class="alert alert-info alert-dismissible fade show">
    <strong>Info : </strong> <span class=" ">You Can See Selectd Items In Go To Cart Button </span>
    <button type="button" class="btn-close" data-dismiss="alert"></button>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card p-3">
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="@item.ImageUrl" class="card-img-top" style="height:200px; object-fit:cover;" />
                }
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p><strong>Price:</strong> $@item.Price</p>

                    <form asp-action="AddToCart" method="post">
                        <input type="hidden" name="id" value="@item.ProductId" />
                        <button type="submit" class="btn btn-primary">Add to Cart</button>

                    </form>
                </div>
            </div>
        </div>
    }
</div>


